<Page x:Class="AllLayouts.PageStackPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllLayouts"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageStackPanel">
    <Border Padding="10">
    <StackPanel>
            <Label x:Name="lblDisplay" Content="Label"/>
        <TextBox Text="TextBox"/>
        <CheckBox Content="CheckBox"></CheckBox>
        <ListBox>
            <ListBoxItem Content="ListBoxItem1"></ListBoxItem>
            <ListBoxItem Content="ListBoxItem2"></ListBoxItem>
        </ListBox>
        <RadioButton Content="RadioButton"/>
        <Button Content="Button"/>
        <ToggleButton Content="ToggleButton"/>
        <RepeatButton Content="RepeatButton" Delay="300" Interval="35" Click="RepeatButton_Click"/>
        <DatePicker Text="DatePicker"/>
    </StackPanel>
    </Border>
</Page>
