<Page x:Class="AllLayouts.PageDock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllLayouts"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageDock">

    <DockPanel>
        <Border DockPanel.Dock="Top" Height="20" Background="Aquamarine">
        <TextBlock Text="textBox" />
        </Border>

        <Border DockPanel.Dock="Bottom" Height="20" Background="DarkOrange">
            <TextBlock Text="textBox" />
            
        </Border>

        <Border DockPanel.Dock="Left" Background="Yellow">
            <TextBlock Text="textBox" />

        </Border>

        <Border DockPanel.Dock="Right" Background="Green">
            <TextBlock Text="textBox" />

        </Border>

    </DockPanel>
</Page>
